<% if products.any? %>
  <dl class="products">
    <% products.each do |p| %>
      <dt class="title"><%=p.title%></dt>
      <dd>
        <div class="text">
          <% if p.image.present? %>
            <%= image_tag(p.image.url("100x100"), :alt => p.image.title) %>
          <% else %>
            <%= image_tag("shop-100x100.gif") %>
          <% end %>
          <%=p.teaser%>
        </div>
      </dd>
      <dd>
        <div class="text">
          <%= link_to "View details", p.product.url %> | 
          
          <% form_tag({:controller => "orders", :action => "update"}, :method => :put) do %>
            <%= hidden_field_tag "product_id", p.product.id %>
            <%= image_submit_tag "/images/icons/cart.png" %>
          <% end %>
        </div>
      </dd>
      </li>
    <%end%>
  </ul>
<% end %>