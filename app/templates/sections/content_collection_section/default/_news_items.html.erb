<% if news_items.any? %>
  <dl class="news">
    <% news_items.each do |n| %>
      <dt><%= n.title %></dt>
      <% if n.publication_date.present? %>
        <dd class="date"><%= l(n.publication_date, :format => :long) %></dd>
      <% end %>
      <dd>
        <div class="text">
          <% if n.image.present? %>
            <img src="<%= n.image.url("50x50")%>" alt="<%= n.image.title %>" />
          <% else %>
            <img src="default-50x50.gif" alt="default">
          <% end %>
          <%= n.teaser %>
        </div>
        <% if url = n.news_item.url %>
          <a href="<%= url %>" class="more">Read more</a>
        <% end %>
      </dd>
    <% end %>
  </dl>
<% end %>